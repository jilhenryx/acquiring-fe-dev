<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Payment Authentication</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family:
        -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue',
        Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
    }

    .container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      padding:
        3rem 2rem;
      max-width: 500px;
      width: 100%;
      text-align: center;
    }

    .spinner {
      width: 60px;
      height: 60px;
      margin: 0 auto 2rem;
      position: relative;
    }

    .spinner::before {
      content: '';
      display: block;
      width: 60px;
      height: 60px;
      border: 4px solid #f3f4f6;
      border-radius: 50%;
    }

    .spinner::after {
      content: '';
      display: block;
      width: 60px;
      height: 60px;
      border: 4px solid #667eea;
      border-top-color: transparent;
      border-radius: 50%;
      position:
        absolute;
      top: 0;
      left: 0;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    h1 {
      color: #1f2937;
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    p {
      color:
        #6b7280;
      font-size: 16px;
      line-height: 1.5;
      margin-bottom: 2rem;
    }

    .status-message {
      background: #f0fdf4;
      border: 1px solid #86efac;
      border-radius: 8px;
      padding: 1rem;
      margin-top: 2rem;
    }

    .status-message.error {
      background: #fef2f2;
      border-color: #fca5a5;
    }

    .status-message.success {
      background: #f0fdf4;
      border-color: #86efac;
    }

    .status-text {
      color: #16a34a;
      font-weight: 500;
    }

    .status-text.error {
      color: #dc2626;
    }

    .icon {
      font-size: 48px;
      margin-bottom: 1rem;
    }

    .success-icon {
      color: #16a34a;
    }

    .error-icon {
      color: #dc2626;
    }

    .redirect-message {
      color: #6b7280;
      font-size: 14px;
      margin-top: 1rem;
    }
  </style>
</head>

<body>
  <div class="container">
    <div id="content">
      <div class="spinner"></div>
      <h1>Verifying Your Payment</h1>
      <p>Please wait while we securely authenticate your payment with your
        bank...</p>
      <p style="font-size: 14px; color: #9ca3af;">Do not close this window or
        press the back button.</p>
    </div>
  </div>

  <form id="paymentForm" action="{{formAction}}" method="{{formMethod}}">
    {{#each formFields}}
    <input type="hidden" name="{{this.name}}" value="{{this.value}}" />
    {{/each}}
  </form>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    const APP_BASE = window.location.origin;
    let currentStep = "{{currentStep}}"
    const formFieldURL = "{{formFieldUrl}}"
    const API_BASE = "{{apiBaseURL}}"
    const paymentRef = "{{paymentRef}}"


    async function completePayment(reqData) {
      console.log('Completing payment...');
      console.log(JSON.stringify(reqData || {}))

      try {
        const response = await fetch(`${API_BASE}/payments/${paymentRef}/sessions`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(reqData || {})
        });

        const data = await response.json();
        const paymentRecord = data.data

        console.log(`Complete session response ${paymentRecord.current_step}`)


        if (paymentRecord.current_step === "pending_3ds_authorisation") {
          window.location.href = `/payment-sessions/${paymentRef}`
        } else if (paymentRecord.current_step === 'payment_approved') {
          showSuccess(paymentRecord);
        } else {
          showError(data.message || 'Payment completion failed');
        }
      } catch (error) {
        console.error('Error completing payment:', error);
        showError(error.message || 'Payment completion failed');

      }
    }

    function initiateDDC() {

      window.addEventListener('message', async (event) => {
        console.log("Post message received")
        console.log(event.origin)
        if (event.origin === '{{providerOrigin}}') {

          try {
            const eventData = JSON.parse(event.data)
            const completeReqData = {};

            if (eventData.Status && eventData.SessionId) {
              completeReqData.dcc_collection_reference = event.data.SessionId;
            }

            await completePayment(completeReqData);

          } catch (err) {
            console.log(err)
          }
        }
      });


      console.log("Launching IFrame")

      const iframe = document.createElement("iframe");
      iframe.width = 1;
      iframe.height = 1;
      iframe.style.display = "none";
      iframe.src = `/payment-sessions/${paymentRef}?${formFieldURL}`;

      document.body.appendChild(iframe);
    }

    const isInIframe = window.self !== window.top;


    if (currentStep === "pending_ddc_authorisation" && !isInIframe) {
      initiateDDC()
    } else {
      console.log('Submitting Payment Form')
      setTimeout(() => {
        document.getElementById('paymentForm').submit();
      }, 1000);

    }

    function showSuccess(paymentData) {
      document.getElementById('content').innerHTML = `
        <div class="icon success-icon">✓</div>
        <h1>Payment Successful!</h1>
        <p>Your payment has been processed successfully.</p>
        <div class="status-message success">
          <div class="status-text">Authentication completed</div>
        </div>
        <p class="redirect-message">Redirecting you back to the merchant...</p>
      `;

      // Redirect after 3 seconds
      if (paymentData && paymentData.redirect_url) {
        setTimeout(() => {
          window.location.href = paymentData.redirect_url;
        }, 3000);
      }
    }

    function showError(message) {
      document.getElementById('content').innerHTML = `
        <div class="icon error-icon">✕</div>
        <h1>Authentication Failed</h1>
        <p>${message}</p>
        <div class="status-message error">
          <div class="status-text error">Payment could not be completed</div>
        </div>
      `;
    }
  </script>
</body>

</html>